rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to animals collection for browsing
    match /animals/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow public read access to events collection for browsing
    match /events/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to manage visits and favorites
    match /visits/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /favorites/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Default: authenticated users can read/write everything else
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
